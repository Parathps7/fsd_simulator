<launch>
    <node name="rtabmap" pkg="rtabmap_ros" type="rtabmap" output="screen">
        <rosparam command="load" file="$(find rtabmap_pkg)/params.yaml" />

        <!-- Remap topics -->
        <remap from="/robot_control/odom" to="/odom" />
        <remap from="/zed/points2" to="/scan_cloud" />
        <remap from="/zed/left/image_rect_color" to="/left/image_rect" />

        <!-- localization mode -->
        <param name="Mem/IncrementalMemory" type="string" value="false" />
        <param name="Mem/InitWMWithAllNodes" type="string" value="false" />
    </node>

</launch>